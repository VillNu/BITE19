{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Shopify Theme Kit deploy open file",
      "type": "shell",
      "command": "cd '${workspaceFolder}/Brooklyn'
      theme deploy ${relativeFileDirname}/${fileBasename}",
      "presentation": {
        "reveal": "always"
      }
      "options": {
        "cwd": "${workspaceFolder}/Brooklyn"
        }
    }
  ]
}
