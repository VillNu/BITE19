    * sections/page-flow.liquid                 ("preset" part only in this file, makes it accessible on the startpage)
    * sections/page-flow-sustainability.liquid
    * sections/page-flow-collaboration.liquid
    * sections/collection-flow-ss19.liquid
{% endcomment %}

<div data-section-id="{{ section.id }}" data-section-type="collection-flow">
  {% include 'collection-flow' %}
</div>


{% schema %}
{
  "name": "Collection Flow",
  "class": "collection-flow",
  "settings": [
    {
      "type": "color",
      "label": "Show background colors",
      "id": "color",
      "default": "rgba(0,0,0,0)",
      "info": "Don't forget to remove before saving. Useful while arranging flow items."
    },
    {
      "type": "text",
      "label": "Schrink product images in position..",
      "id": "minis",
      "default": "2, 5",
      "info": "Separate each number with \", \""
    },
    {
      "type": "checkbox",
      "label": "Show Collection title and details in the top",
      "id": "collection_flow_details",
      "default": true
    }
  ],
  "blocks": [
  {
    "type": "flow-page-details",
    "name": "Page Details",
    "settings": [
        {
          "type": "header",
          "content": "Placement"
        },
        {
          "type": "range",
          "label": "Spans columns",
          "id": "colspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "range",
          "label": "Spans rows",
          "id": "rowspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "select",
          "label": "Vertical position",
          "id": "align",
          "options": [
            {"value": "auto", "label": "Auto"},
            {"value": "stretch", "label": "Stretch"},
            {"value": "start", "label": "Top"},
            {"value": "center", "label": "Center"},
            {"value": "end", "label": "Bottom"}
          ],
          "default": "stretch"
        },
        {
          "type": "checkbox",
          "label": "Show on Mobile",
          "id": "show_on_mobile",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show on Desktop",
          "id": "show_on_desktop",
          "default": true
        }
      ]
    },
    {
      "type": "flow-image",
      "name": "Image",
      "settings": [
        {
          "type": "text",
          "label": "Insert at position no",
          "id": "position"
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "url",
          "label": "Link",
          "id": "link"
        },
        {
          "type": "header",
          "content": "Placement"
        },
        {
          "type": "range",
          "label": "Spans columns",
          "id": "colspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "range",
          "label": "Spans rows",
          "id": "rowspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "select",
          "label": "Vertical position",
          "id": "align",
          "options": [
            {"value": "auto", "label": "Auto"},
            {"value": "stretch", "label": "Stretch"},
            {"value": "start", "label": "Top"},
            {"value": "center", "label": "Center"},
            {"value": "end", "label": "Bottom"}
          ],
          "default": "stretch"
        },
        {
          "type": "checkbox",
          "label": "Show on Mobile",
          "id": "show_on_mobile",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show on Desktop",
          "id": "show_on_desktop",
          "default": true
        }
      ]
    },
    {
      "type": "flow-product",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "label": "Insert at position no",
          "id": "position"
        },
        {
          "type": "product",
          "label": "Product",
          "id": "product",
          "info": "Chosen product will only change how the corresponding product in this collection is shown."
        },
        {
          "type": "range",
          "label": "Spans columns",
          "id": "colspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "range",
          "label": "Spans rows",
          "id": "rowspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "select",
          "label": "Vertical position",
          "id": "align",
          "options": [
            {"value": "auto", "label": "Auto"},
            {"value": "stretch", "label": "Stretch"},
            {"value": "start", "label": "Top"},
            {"value": "center", "label": "Center"},
            {"value": "end", "label": "Bottom"}
          ],
          "default": "stretch"
        },
        {
          "type": "checkbox",
          "label": "Show on Mobile",
          "id": "show_on_mobile",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show on Desktop",
          "id": "show_on_desktop",
          "default": true
        }
      ]
    },
    {
      "type": "flow-hero",
      "name": "Hero Image/video",
      "settings": [
        {
          "type": "text",
          "label": "Insert at position no",
          "id": "position"
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Video url",
          "id": "video",
          "info": "Url needs to point to either internal file, youtube, vimeo or other unrestricted location."
        }
      ]
    },
    {
      "type": "flow-blockquote",
      "name": "Blockquote",
      "settings": [
        {
          "type": "text",
          "label": "Insert at position no",
          "id": "position"
        },
        {
          "type": "textarea",
          "label": "Text",
          "id": "text"
        },
        {
          "type": "text",
          "label": "Author",
          "id": "author"
        },
        {
          "type": "range",
          "label": "Spans columns",
          "id": "colspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "range",
          "label": "Spans rows",
          "id": "rowspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "select",
          "label": "Vertical position",
          "id": "align",
          "options": [
            {"value": "auto", "label": "Auto"},
            {"value": "stretch", "label": "Stretch"},
            {"value": "start", "label": "Top"},
            {"value": "center", "label": "Center"},
            {"value": "end", "label": "Bottom"}
          ],
          "default": "stretch"
        },
        {
          "type": "checkbox",
          "label": "Show on Mobile",
          "id": "show_on_mobile",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show on Desktop",
          "id": "show_on_desktop",
          "default": true
        }
      ]
    },
    {
      "type": "flow-text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "label": "Insert at position no",
          "id": "position"
        },
        {
          "type": "text",
          "label": "Header",
          "id": "title"
        },
        {
          "type": "textarea",
          "label": "Text",
          "id": "text"
        },
        {
          "type": "checkbox",
          "label": "Disable UPPERCASE",
          "id": "no_uppercase",
          "default": true
        },
        {
          "type": "url",
          "label": "Link",
          "id": "link"
        },
        {
          "type": "range",
          "label": "Spans columns",
          "id": "colspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "range",
          "label": "Spans rows",
          "id": "rowspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "select",
          "label": "Vertical position",
          "id": "align",
          "options": [
            {"value": "auto", "label": "Auto"},
            {"value": "stretch", "label": "Stretch"},
            {"value": "start", "label": "Top"},
            {"value": "center", "label": "Center"},
            {"value": "end", "label": "Bottom"}
          ],
          "default": "stretch"
        },
        {
          "type": "checkbox",
          "label": "Show on Mobile",
          "id": "show_on_mobile",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show on Desktop",
          "id": "show_on_desktop",
          "default": true
        }
      ]
    },
    {
      "type": "flow-space",
      "name": "Empty space",
      "settings": [
        {
          "type": "text",
          "label": "Insert at position no",
          "id": "position"
        },
        {
          "type": "color",
          "label": "Background color",
          "id": "bg_color",
          "default": "rgba(250,250,250,1)",
          "info": "Only visible while Collection Flow backgound colors are turned on."
        },
        {
          "type": "range",
          "label": "Spans columns",
          "id": "colspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "range",
          "label": "Spans rows",
          "id": "rowspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "select",
          "label": "Vertical position",
          "id": "align",
          "options": [
            {"value": "auto", "label": "Auto"},
            {"value": "stretch", "label": "Stretch"},
            {"value": "start", "label": "Top"},
            {"value": "center", "label": "Center"},
            {"value": "end", "label": "Bottom"}
          ],
          "default": "stretch"
        },
        {
          "type": "checkbox",
          "label": "Show on Mobile",
          "id": "show_on_mobile",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show on Desktop",
          "id": "show_on_desktop",
          "default": true
        }
      ]
    },
    {
      "type": "flow-content",
      "name": "Collection content",
      "settings": [
        {
          "type": "header",
          "content": "Collection title and description"

        },
        {
          "type": "text",
          "label": "Insert at position no",
          "id": "position"
        },
        {
          "type": "range",
          "label": "Spans columns",
          "id": "colspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "range",
          "label": "Spans rows",
          "id": "rowspan",
          "min": 1,
          "max": 5,
          "default": 1
        },
        {
          "type": "select",
          "label": "Vertical position",
          "id": "align",
          "options": [
            {"value": "auto", "label": "Auto"},
            {"value": "stretch", "label": "Stretch"},
            {"value": "start", "label": "Top"},
            {"value": "center", "label": "Center"},
            {"value": "end", "label": "Bottom"}
          ],
          "default": "stretch"
        },
        {
          "type": "checkbox",
          "label": "Show on Mobile",
          "id": "show_on_mobile",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show on Desktop",
          "id": "show_on_desktop",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}
